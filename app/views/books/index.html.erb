<!--ここに投稿された本のtitleとbodyを書き詳細show、編集edit、削除destroyをつける-->
<body>
	<%= flash[:success3] %>
	<%= flash[:error] %>
	<h1>Books</h1>
	  <table>
	  	<tr>
	  		<th>Title</th>
	  		<th>Body</th>
	  	</tr>
	  	<tbody>
		  	<% @books.each do |book| %>
		  	 <tr>
				<td><%= "#{book.title}" %></td>
				<td><%= "#{book.body}" %></td>
				<td><%=link_to "Show", book_path(book.id) %></td>
				<td><%=link_to "Edit", edit_book_path(book.id) %></td>
				<td><%=link_to "Delete", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
		  	 </tr>
		  	<% end %>
		</tbody>
	  </table>

	<h1>New book</h1>

		<%= form_for(@book) do |f| %>
    	<h4>Title</h4>
    	<%= f.text_field :title %>

    	<h4>Body</h4>
    	<%= f.text_area :body %>

    	<%= f.submit "Create Book" %>

<% end %>
</body>

